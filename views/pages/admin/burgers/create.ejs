<%- include('../../../shared/_header.ejs') %>
    <main class="container d-flex justify-content-center h-100">
        <div class="card w-75 m-3">
            <h1 class="p-3"><%= title %></h1>
            <form method="post" class="p-3" enctype="multipart/form-data">
                <div class="form-group m-2">
                    <label for="name">Nombre de la hamburguesa:</label>
                    <input class="form-control" type="text" id="name" name="name" minlength="6" required>
                </div>
                <div class="form-group m-2">
                    <label for="image">Foto de la hamburgruesa:</label>
                    <input class="form-control" type="file" id="image" name="image" required> 
                </div>
                <div class="form-group m-2">
                    <label for="description">Foto de la hamburgruesa:</label>
                    <input class="form-control" type="text" id="description" name="description" minlength="10" required> 
                </div>
                <div class="form-group m-2">
                    <label for="price">Precio: </label>
                    <input class="form-control" type="number" id="price" name="price" min="0" required> 
                </div>
                <div class="m-2 d-flex justify-content-between w-100">
                    <button class="btn btn-success" type="submit">
                        Guardar
                    </button>
                    <button class="btn btn-danger" type="button"
                        onclick="window.location.replace('/admin/')">
                        Cancelar
                    </button>
                </div>
            </form>
        </div>
    </main>
<%- include('../../../shared/footer.ejs') %>