<%- include('../../../shared/_header.ejs') %>
    <main class="container d-flex justify-content-center h-100">
        <div class="card w-75 m-3">
            <h1 class="p-3"><%= title %></h1>
            <form method="post" class="p-3" enctype="multipart/form-data">
                <div class="form-group m-2">
                    <label for="name">Nombre del restaurante:</label>
                    <input class="form-control" type="text" id="name" name="name" 
                        minlength="6" required value="<%= restaurant.name %>">
                </div>
                <div class="form-group m-2">
                    <label for="logo">Logo del restaurante:</label>
                    <div class="container p-3">
                        <img src="/images/restaurants/<%= restaurant.logo %>" alt="logo" class="logo-image w-75" />
                    </div>
                    <input class="form-control" type="file" id="logo" name="logo"> 
                </div>
                <input type="hidden" name="id" id="id" val="<%= restaurant.id %>"/>
                <div class="m-2 d-flex justify-content-around w-100">
                    <button class="btn btn-success" type="submit">
                        Guardar
                    </button>
                    <button class="btn btn-danger" type="button"
                        onclick="window.location.replace('/admin/')">
                        Cancelar
                    </button>
                </div>
            </form>


        </div>
    </main>
<%- include('../../../shared/footer.ejs') %>